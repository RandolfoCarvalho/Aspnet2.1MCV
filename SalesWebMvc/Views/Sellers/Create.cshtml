@*

*@
@model SalesWebMvc.Models.Seller;
@{
    ViewData["Title"] = "Create";
}
<h2> @ViewData["Title"] </h2>

<h4> Seller </h4>
<hr />
@*Row garante que a div vai ocupar a largura da tela*@
<div class="row">
    @*Usando 1/3 da tela, por que bootstrap divide a tela em 12 partes e 4 é 1/3 da tela*@
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                @*Name do model seller*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>

            </div>
            <div class="form-group">
                @**@
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />

            </div>
            <div class="form-group">
                @**@
                <label asp-for="birthDate" class="control-label"></label>
                <input asp-for="birthDate" class="form-control" />

            </div>
            <div class="form-group">
                @**@
                <label asp-for="baseSalary" class="control-label"></label>
                <input asp-for="baseSalary" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>


