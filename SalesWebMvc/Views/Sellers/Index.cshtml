@*
    
*@
@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";

}
<h2> @ViewData["Title"] </h2>
<p> <a asp-action="Create" class="btn btn-default"> Create New </a></p>
<table class="table table=striped table-hover"> 
    <thead>
        <tr class="success">
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.Name);
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.email);
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.birthDate);
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.baseSalary);
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.birthDate);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.baseSalary);
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                    <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
                    <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                </td>
            </tr>
        }
    </tbody>


</table>
